# Copy this file to `.env` and fill in your values.
# MongoDB Atlas connection (preferred)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority
MONGODB_DB=CrosswordDB

# Alternative legacy names still supported
# MONGO_URI=
# MONGO_DB=

# App
PORT=3000
SESSION_SECRET=change-this-long-random-string
APP_BASE_URL=http://localhost:3000
ADMIN_USERS=admin

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Dev only: allow running without MongoDB
ALLOW_MEMORY_FALLBACK=
